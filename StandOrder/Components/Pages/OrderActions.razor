@page "/order-actions"

<div class="container">
    <div class="text-center mb-5">
        <h1 class="display-5">Warehouse Order Operations</h1>
        <p class="lead text-muted">Select an action to continue.</p>
    </div>

    <!-- Flex container to center the cards and handle wrapping -->
    <div class="d-flex justify-content-center align-items-center flex-wrap gap-4">

        <!-- Card 1: Pull Order -->
        <div class="card text-center shadow-sm" style="width: 22rem;">
            <div class="card-body p-4">
                <div class="feature-icon bg-secondary bg-gradient text-white rounded-3 mb-4 mt-n4">
                    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-card-checklist" viewBox="0 0 16 16">
                        <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5zM15 3.5a1.5 1.5 0 0 0-1.5-1.5h-13A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5z" />
                        <path d="M7 5.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5m-1.496-.854a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 1 1 .708-.708l.146.147 1.146-1.147a.5.5 0 0 1 .708 0M7 9.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5m-1.496-.854a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 0 1 .708-.708l.146.147 1.146-1.147a.5.5 0 0 1 .708 0" />
                    </svg>
                </div>
                <h5 class="card-title fw-bold">Pull Order</h5>
                <p class="card-text">Pick items from warehouse locations to fulfill customer orders.</p>
                <a href="/orders-to-be-pulled" class="btn btn-primary mt-3">Pull Order</a>
            </div>
        </div>

        <!-- Card 2: Load Order -->
        <div class="card text-center shadow-sm" style="width: 22rem;">
            <div class="card-body p-4">
                <div class="feature-icon bg-secondary bg-gradient text-white rounded-3 mb-4 mt-n4">
                    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-box-arrow-up-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M8.636 3.5a.5.5 0 0 0-.5-.5H1.5A1.5 1.5 0 0 0 0 4.5v10A1.5 1.5 0 0 0 1.5 16h10a1.5 1.5 0 0 0 1.5-1.5V7.864a.5.5 0 0 0-1 0V14.5a.5.5 0 0 1-.5.5h-10a.5.5 0 0 1-.5-.5v-10a.5.5 0 0 1 .5-.5h6.636a.5.5 0 0 0 .5-.5" />
                        <path fill-rule="evenodd" d="M16 .5a.5.5 0 0 0-.5-.5h-5a.5.5 0 0 0 0 1h3.793L6.146 9.146a.5.5 0 1 0 .708.708L15 1.707V5.5a.5.5 0 0 0 1 0z" />
                    </svg>
                </div>
                <h5 class="card-title fw-bold">Load Order</h5>
                <p class="card-text">Load a completed customer order onto a truck for delivery.</p>
                <a href="/orders-to-be-loaded" class="btn btn-primary mt-3">Load Order</a>
            </div>
        </div>

        <!-- Card 3: Showroom Order -->
        <div class="card text-center shadow-sm" style="width: 22rem;">
            <div class="card-body p-4">
                <div class="feature-icon bg-secondary bg-gradient text-white rounded-3 mb-4 mt-n4">
                    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-shop" viewBox="0 0 16 16">
                        <path d="M2.97 1.35A1 1 0 0 1 3.73 1h8.54a1 1 0 0 1 .76.35l2.609 3.044A1.5 1.5 0 0 1 16 5.37v.255a2.375 2.375 0 0 1-4.25 1.458A2.37 2.37 0 0 1 9.875 8 2.37 2.37 0 0 1 8 7.083 2.37 2.37 0 0 1 6.125 8a2.37 2.37 0 0 1-1.875-.917A2.375 2.375 0 0 1 0 5.625V5.37a1.5 1.5 0 0 1 .361-.976zm1.78 4.275a1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0 1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0 1.375 1.375 0 1 0 2.75 0V5.37a.5.5 0 0 0-.12-.325L12.27 2H3.73L1.12 5.045A.5.5 0 0 0 1 5.37v.255a1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0M1.5 8.5A.5.5 0 0 1 2 9v6h12V9a.5.5 0 0 1 1 0v6h.5a.5.5 0 0 1 0 1H.5a.5.5 0 0 1 0-1H1V9a.5.5 0 0 1 .5-.5m2 .5a.5.5 0 0 1 .5.5V13h8V9.5a.5.5 0 0 1 1 0V13a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V9.5a.5.5 0 0 1 .5-.5" />
                    </svg>
                </div>
                <h5 class="card-title fw-bold">Showroom Order</h5>
                <p class="card-text">Create a new order for items directly from the showroom floor.</p>
                <a href="/showroom-order" class="btn btn-primary mt-3">Showroom Order</a>
            </div>
        </div>

        <!-- Card 4: Walk Through -->
        <div class="card text-center shadow-sm" style="width: 22rem;">
            <div class="card-body p-4">
                <div class="feature-icon bg-secondary bg-gradient text-white rounded-3 mb-4 mt-n4">
                    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-person-walking" viewBox="0 0 16 16">
                        <path d="M9.5 1.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0M6.44 3.752A.75.75 0 0 1 7 3.5h1.445c.742 0 1.32.643 1.243 1.38l-.43 4.083a1.8 1.8 0 0 1-.088.395l-.316.949a.75.75 0 0 1-1.494-.25l.308-.926-.236-2.244-.254.214a.75.75 0 0 1-1.03-.434l-.482-1.204a.75.75 0 0 1 .22-1.026m-1.553 3.203a.75.75 0 0 1 1.06 0l1.75 1.75a.75.75 0 1 1-1.06 1.06L5.88 8.713a.75.75 0 0 1 0-1.06M3.5 10.25a.75.75 0 0 1 .75-.75h.036l1.458 1.458a.75.75 0 0 1 0 1.06l-1.5 1.5a.75.75 0 0 1-1.06-1.06L4.036 11H3.5a.75.75 0 0 1-.75-.75" />
                    </svg>
                </div>
                <h5 class="card-title fw-bold">Walk Through</h5>
                <p class="card-text">Assist a customer with a walk-through order and purchase.</p>
                <a href="/customer-order" class="btn btn-primary mt-3">Walk Through</a>
            </div>
        </div>

        <!-- Card 5: Return -->
        <div class="card text-center shadow-sm" style="width: 22rem;">
            <div class="card-body p-4">
                <div class="feature-icon bg-secondary bg-gradient text-white rounded-3 mb-4 mt-n4">
                    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5" />
                    </svg>
                </div>
                <h5 class="card-title fw-bold">Return</h5>
                <p class="card-text">Process a customer return and restock items into inventory.</p>
                <a href="/customer-returns" class="btn btn-primary mt-3">Process Return</a>
            </div>
        </div>

    </div>
</div>

<!-- Simple CSS for the icon styling -->
<style>
    .feature-icon {
        width: 4rem;
        height: 4rem;
        font-size: 2rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin: -4rem auto 0; /* Pulls the icon up */
    }
</style>
